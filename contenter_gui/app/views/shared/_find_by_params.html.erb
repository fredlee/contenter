<%=
  # $stderr.puts "options = #{options.inspect}"
  # raise "options = #{options.inspect}"
   
  query = Content::Query.new(options)
  sql = query.sql
  result = Content.paginate_by_sql(sql, :page => params[:page])
  result_count = query.count

  render :partial => 'contents/list_results',
         :locals => {
           :title => title,
           :result => result,
           :count => result_count,
         }
%>

