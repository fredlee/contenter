<hr>
<% item.send(relationship.name).each do |record| %>
  <%= 
     content = 
     streamlined_def.fields.collect do |f|
       record.send(f)
     end.reject do | f | 
       f.blank?
     end.join(streamlined_def.separator)

     if opts = streamlined_def.options[:link_to]
       opts = { :id => record }.merge(opts)
       content = link_to content, opts
     end

     content + "<br/>"
   %>
<% end %>
<hr>
